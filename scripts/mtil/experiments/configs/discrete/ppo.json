{
    "logging_config": {
        "save_path": "./logs/pendulum",
        "experiment_name": "ppo-discrete",
        "log_interval": 1,
        "checkpoint_interval": 50
    },
    "model_config": {
        "policy": {
            "architecture": "mlp",
            "layers": [
                64,
                64
            ]
        },
        "vf": {
            "architecture": "mlp",
            "layers": [
                64,
                64
            ]
        }
    },
    "optimizer_config": {
        "policy": {
            "optimizer": "adam",
            "lr": {
                "scheduler": "constant_schedule",
                "scheduler_kwargs": {
                    "value": 0.0003
                }
            },
            "max_grad_norm": false
        },
        "vf": {
            "optimizer": "adam",
            "lr": {
                "scheduler": "constant_schedule",
                "scheduler_kwargs": {
                    "value": 0.0003
                }
            },
            "max_grad_norm": false
        }
    },
    "learner_config": {
        "task": "reinforcement_learning",
        "env_config": {
            "env_type": "gym",
            "env_name": "ParameterizedPendulum-v0",
            "env_kwargs": {
                "seed": 2,
                "use_default": false,
                "discrete_control": true,
                "control_mode": "discrete"
            }
        },
        "seeds": {
            "model_seed": 44,
            "buffer_seed": 42,
            "env_seed": 42
        },
        "buffer_config": {
            "buffer_type": "default",
            "buffer_size": 512
        },
        "num_steps_per_epoch": 2048,
        "learner": "ppo",
        "gamma": 0.9,
        "gae_lambda": 0.95,
        "normalize_advantage": true,
        "temperature": 1.0,
        "eps": 1e-05,
        "obs_rms": true,
        "value_rms": false,
        "policy_distribution": "softmax",
        "opt_batch_size": 64,
        "opt_epochs": 10,
        "ent_loss_setting": {
            "scheduler": "constant_schedule",
            "scheduler_kwargs": {
                "value": 0.0
            }
        },
        "vf_loss_setting": {
            "coefficient": 0.5,
            "reduction": "mean",
            "clip_param": false
        },
        "pi_loss_setting": {
            "coefficient": 1.0,
            "reduction": "mean",
            "clip_param": 0.2
        }
    },
    "train_config": {
        "num_epochs": 500
    }
}