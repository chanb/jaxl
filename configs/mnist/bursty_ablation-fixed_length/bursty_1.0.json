{
    "logging_config": {
        "save_path": "./logs/icl-mnist/bursty_ablation-fixed_length-random_label",
        "experiment_name": "bursty_1.0",
        "log_interval": 50,
        "checkpoint_interval": 50000
    },
    "model_config": {
        "architecture": "icl_gpt",
        "num_contexts": 8,
        "num_blocks": 8,
        "num_heads": 8,
        "embed_dim": 64,
        "positional_encoding": {
            "type": "default",
            "kwargs": {
                "embed_dim": 64,
                "max_len": 9
            }
        },
        "input_tokenizer": {
            "type": "resnet",
            "kwargs": {
                "blocks_per_group": [2, 2, 2, 2],
                "features": [16, 32, 32, 64],
                "stride": [1, 2, 2, 2],
                "use_projection": [true, true, true, true],
                "use_bottleneck": true,
                "use_batch_norm": true
            }
        },
        "output_tokenizer": {
            "type": "mlp",
            "kwargs": {
                "layers": []
            }
        },
        "query_pred_only": true
    },
    "optimizer_config": {
        "optimizer": "adam",
        "lr": {
            "scheduler": "linear_warmup_sqrt_decay",
            "scheduler_kwargs": {
                "max_lr": 3e-4,
                "warmup_steps": 4000
            }
        },
        "max_grad_norm": false,
        "mask_names": ["output_tokenizer"]
    },
    "learner_config": {
        "task": "in_context_learning",
        "dataset_config": {
            "dataset_name": "mnist",
            "dataset_kwargs": {
                "save_path": "/home/bryanpu1/projects/icl/data",
                "task_name": "multitask_mnist_bursty",
                "task_config": {
                    "num_sequences": 5000000,
                    "sequence_length": 9,
                    "random_label": true,
                    "p_bursty": 1.0,
                    "save_dir": "/home/bryanpu1/projects/icl/data/mnist_icl",
                    "augmentation": true,
                    "noise_scale": 0.1
                }
            },
            "dataset_wrapper": {
                "type": "FixedLengthContextDataset",
                "kwargs": {
                    "context_len": 8
                }
            },
            "num_workers": 4
        },
        "seeds": {
            "model_seed": 42,
            "data_seed": 42
        },
        "learner": "mle",
        "losses": ["categorical", "l2"],
        "loss_settings": [
            {
                "coefficient": 1.0,
                "reduction": "mean",
                "is_one_hot": true
            },
            {
                "coefficient": 0.0
            }
        ],
        "num_updates_per_epoch": 1,
        "batch_size": 32,
        "predictor_type": "default"
    },
    "train_config": {
        "num_epochs": 500000
    }
}
