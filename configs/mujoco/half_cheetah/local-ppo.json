{
    "logging_config": {
        "save_path": "./logs/half_cheetah-default",
        "experiment_name": "ppo",
        "log_interval": 1,
        "checkpoint_interval": false
    },
    "model_config": {
        "policy": {
            "architecture": "mlp",
            "layers": [128, 128],
            "flatten": true
        },
        "vf": {
            "architecture": "mlp",
            "layers": [128, 128],
            "flatten": true
        }
    },
    "optimizer_config": {
        "policy": {
            "optimizer": "adam",
            "lr": {
                "scheduler": "constant_schedule",
                "scheduler_kwargs": {
                    "value": 3e-4
                }
            },
            "max_grad_norm": 0.5
        },
        "vf": {
            "optimizer": "adam",
            "lr": {
                "scheduler": "constant_schedule",
                "scheduler_kwargs": {
                    "value": 3e-4
                }
            },
            "max_grad_norm": 0.5
        }
    },
    "learner_config": {
        "task": "reinforcement_learning",
        "env_config": {
            "env_type": "gym",
            "env_name": "HalfCheetah-v4",
            "env_kwargs": {}
        },
        "seeds": {
            "model_seed": 42,
            "buffer_seed": 42,
            "env_seed": 42
        },
        "buffer_config": {
            "buffer_type": "default",
            "buffer_size": 2048
        },
        "num_steps_per_epoch": 2048,
        "learner": "ppo",
        "gamma": 0.99,
        "gae_lambda": 0.95,
        "normalize_advantage": true,
        "eps": 1e-5,
        "obs_rms": true,
        "value_rms": false,
        "policy_distribution": "gaussian",
        "min_std": 1e-4,
        "opt_batch_size": 32,
        "opt_epochs": 10,
        "kl_threshold": false,
        "update_before_early_stopping": false,
        "ent_loss_setting": {
            "scheduler": "linear_schedule",
            "scheduler_kwargs": {
                "init_value": 0.002,
                "end_value": 0.0,
                "transition_begin": 0,
                "transition_steps": 100
            }
        },
        "vf_loss_setting": {
            "coefficient": 0.5,
            "reduction": "mean",
            "clip_param": 0.1
        },
        "pi_loss_setting": {
            "objective": "clip",
            "coefficient": 1.0,
            "reduction": "mean",
            "clip_param": 0.1,
            "beta": 0.02
        }
    },
    "train_config": {
        "num_epochs": 500
    }
}