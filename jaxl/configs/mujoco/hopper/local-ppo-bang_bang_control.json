{
    "logging_config": {
        "save_path": "./logs/hopper-default",
        "experiment_name": "ppo-bang_bang_control",
        "log_interval": 1,
        "checkpoint_interval": false
    },
    "model_config": {
        "policy": {
            "architecture": "mlp",
            "layers": [128, 128]
        },
        "vf": {
            "architecture": "mlp",
            "layers": [128, 128]
        }
    },
    "optimizer_config": {
        "policy": {
            "optimizer": "adam",
            "lr": 3e-4,
            "max_grad_norm": 1.0
        },
        "vf": {
            "optimizer": "adam",
            "lr": 3e-4,
            "max_grad_norm": 1.0
        }
    },
    "learner_config": {
        "task": "reinforcement_learning",
        "env_config": {
            "env_type": "gym",
            "env_name": "ParameterizedHopper-v0",
            "env_kwargs": {
                "seed": 5,
                "use_default": true,
                "control_mode": "bang_bang"
            }
        },
        "seeds": {
            "model_seed": 42,
            "buffer_seed": 42,
            "env_seed": 42
        },
        "buffer_config": {
            "buffer_type": "default",
            "buffer_size": 2048
        },
        "num_steps_per_epoch": 2048,
        "learner": "ppo",
        "gamma": 0.99,
        "gae_lambda": 0.95,
        "normalize_advantage": true,
        "temperature": 1.0,
        "eps": 1e-5,
        "obs_rms": true,
        "value_rms": true,
        "policy_distribution": "bang_bang",
        "opt_batch_size": 256,
        "opt_epochs": 10,
        "entropy_coefficient": 0.002,
        "vf_loss_setting": {
            "coefficient": 1.0,
            "reduction": "mean",
            "clip_param": false
        },
        "pi_loss_setting": {
            "coefficient": 1.0,
            "reduction": "mean",
            "clip_param": 0.2
        }
    },
    "train_config": {
        "num_epochs": 5000
    }
}
